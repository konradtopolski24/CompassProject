<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLatitude"
        android:layout_width="@dimen/wt_zero"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mg_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLatitude"
            style="@style/EditTextDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_latitude" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLongitude"
        android:layout_width="@dimen/wt_zero"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mg_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilLatitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLongitude"
            style="@style/EditTextDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_longitude" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>